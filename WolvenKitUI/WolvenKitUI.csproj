<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net5.0-windows;netcoreapp3.1</TargetFrameworks>
    <AssemblyName>WolvenKitUI</AssemblyName>
    <RootNamespace>WolvenKitUI</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
  </PropertyGroup>

  <PropertyGroup>
    <UseWpf>true</UseWpf>
    
    <ExtrasEnableImplicitWpfReferences>true</ExtrasEnableImplicitWpfReferences>
    <ExtrasEnableImplicitWinFormsReferences>true</ExtrasEnableImplicitWinFormsReferences>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Tools like SonarQube require a unique project guid -->
    <ProjectGuid>c7281cb5-d18d-48a5-a6e4-670e9ad5e6f6</ProjectGuid>
  </PropertyGroup>

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <StartupObject />
    <NoWarn>$(NoWarn);SA1652</NoWarn>
    <ApplicationIcon>Resources\Icons\logo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Catel.Core" Version="5.12.11" />
    <PackageReference Include="Catel.MVVM" Version="5.12.11" />
    <PackageReference Include="Catel.Fody" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="Dirkster.AvalonDock" Version="4.50.0" />
    <PackageReference Include="Dirkster.AvalonDock.Themes.VS2013" Version="4.50.0" />
    <PackageReference Include="Fody" Version="6.3.0" PrivateAssets="all" />
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.5.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ModuleInit.Fody" Version="2.1.1" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.2.1" PrivateAssets="all" />
    <PackageReference Include="Orc.ProjectManagement" Version="4.0.2" />
    <PackageReference Include="Orc.Squirrel" Version="4.0.4" />
    <PackageReference Include="Orc.Squirrel.Xaml" Version="4.0.4" />
    <PackageReference Include="Orchestra.Shell.Ribbon.Fluent" Version="6.1.1" />
    <PackageReference Include="SharpVectors.Reloaded" Version="1.7.1" />
    <PackageReference Include="System.Security.Permissions" Version="5.0.0" />
    <PackageReference Include="WpfAnalyzers" Version="3.5.2" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  
  <!-- Fallback code in case repository template is not found, code below can be removed when the repository template files are used -->
  
  <ItemGroup>
    <None Remove="Resources\Icons\Close_16x.svg" />
    <None Remove="Resources\Icons\EventLog_16x.svg" />
    <None Remove="Resources\Icons\ImportFile_16x.svg" />
    <None Remove="Resources\Icons\ImportTheme_16x.svg" />
    <None Remove="Resources\Icons\MoveToSubmodule_16x.svg" />
    <None Remove="Resources\Icons\NewFile_16x.svg" />
    <None Remove="Resources\Icons\NewSolutionFolder_16x.svg" />
    <None Remove="Resources\Icons\OpenFile_16x.svg" />
    <None Remove="Resources\Icons\OpenFolder_16x.svg" />
    <None Remove="Resources\Icons\RunTest_16x.svg" />
    <None Remove="Resources\Icons\Run_16x.svg" />
    <None Remove="Resources\Icons\SearchFolderClosed_16x.svg" />
    <None Remove="Resources\Icons\SelectObject_16x.svg" />
    <None Remove="Resources\Icons\Settings_16x.svg" />
    <None Remove="Resources\Icons\SQLServerObjectExplorer_16x.svg" />
    <None Remove="Resources\Images\git.png" />
    <None Remove="Resources\Images\New_Project_dark_64x.png" />
    <None Remove="Resources\Images\New_Project_light_64x.png" />
    <None Remove="Resources\Images\Open_Project_dark_64x.png" />
    <None Remove="Resources\Images\Open_Project_light_64x.png" />
    <None Remove="Resources\Images\Preferences_light_64x.png" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Resources\AvalonDock.Layout.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Resource Include="Resources\Icons\Close_16x.svg" />
    <Resource Include="Resources\Icons\EventLog_16x.svg" />
    <Resource Include="Resources\Icons\ImportFile_16x.svg" />
    <Resource Include="Resources\Icons\ImportTheme_16x.svg" />
    <Resource Include="Resources\Icons\NewFile_16x.svg" />
    <Resource Include="Resources\Icons\NewSolutionFolder_16x.svg" />
    <Resource Include="Resources\Icons\OpenFile_16x.svg" />
    <Resource Include="Resources\Icons\OpenFolder_16x.svg" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\WolvenKit.App\WolvenKit.App.csproj" />
    <ProjectReference Include="..\WolvenKit.Common\WolvenKit.Common.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="Resources\Icons\MoveToSubmodule_16x.svg" />
    <Resource Include="Resources\Icons\RunTest_16x.svg" />
    <Resource Include="Resources\Icons\Run_16x.svg" />
    <Resource Include="Resources\Icons\SearchFolderClosed_16x.svg" />
    <Resource Include="Resources\Icons\SelectObject_16x.svg" />
    <Resource Include="Resources\Icons\Settings_16x.svg" />
    <Resource Include="Resources\Icons\SQLServerObjectExplorer_16x.svg" />
    <Content Include="Resources\Images\git.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Resource Include="Resources\Images\Preferences_light_64x.png" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="ViewModels\" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
</Project>