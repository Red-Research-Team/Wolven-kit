<catel:UserControl
 x:Class="WolvenKit.MVVM.Views.Shell.HomePage.Pages.SettingsPages.SubPages.General.UpdatesSubSettingsView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 >

    <Grid hc:ThemeManager.RequestedAccentColor="{DynamicResource MahApps.Brushes.Accent3}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <hc:ScrollViewer>
                <StackPanel>

                    <Border
                     Margin="15,15,32,0"
                     Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}"
                     BorderThickness="4,0,0,6"
                     Style="{StaticResource BorderTipPrimary}"
                     >
                        <Grid>
                            <TextBlock
                             Margin="0,0,50,0"
                             VerticalAlignment="Center"
                             FontSize="16"
                             Text="Application"
                             />
                        </Grid>
                    </Border>

                    <Border
                     Margin="15,15,32,10"
                     Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}"
                     BorderThickness="4,0,0,2"
                     Style="{StaticResource BorderTipPrimary}"
                     >
                        <StackPanel>

                            <Grid Margin="5">
                                <TextBlock
                                 Margin="0,0,50,0"
                                 VerticalAlignment="Center"
                                 Text="Auto-update WolvenKit"
                                 />
                                <ToggleButton
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 IsEnabled="True"
                                 Style="{StaticResource ToggleButtonFlip}"
                                 >
                                    <hc:StatusSwitchElement.CheckedElement>
                                        <Border Background="{DynamicResource MahApps.Brushes.Accent3}">
                                            <TextBlock
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="{DynamicResource TextIconBrush}"
                                             Text="On"
                                             />
                                        </Border>
                                    </hc:StatusSwitchElement.CheckedElement>
                                    <Border Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}">
                                        <TextBlock
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource TextIconBrush}"
                                         Text="Off"
                                         />
                                    </Border>
                                </ToggleButton>
                            </Grid>

                            <Grid Margin="5">
                                <TextBlock
                                 Margin="0,0,50,0"
                                 VerticalAlignment="Center"
                                 Text="Update channel"
                                 />
                                <ComboBox
                                 Width="250"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 Text=""
                                 />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </hc:ScrollViewer>
        </Grid>

        <Grid Grid.Column="1">
            <hc:ScrollViewer>
                <StackPanel />
            </hc:ScrollViewer>
        </Grid>
    </Grid>
</catel:UserControl>
