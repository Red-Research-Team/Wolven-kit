             x:Name="SFProperties"
             syncfusion:DockingManager.DesiredWidthInDockedMode="30"
             syncfusion:DockingManager.Header="Properties"
             syncfusion:DockingManager.SideInDockedMode="Right"
             syncfusion:DockingManager.TargetNameInDockedMode="SFAssetBrowser"
             >
                <views1:PropertiesView Background="{DynamicResource ContentBackgroundAlt2}" />

            </ContentControl>
            <ContentControl
             x:Name="SFLog"
             syncfusion:DockingManager.DesiredHeightInDockedMode="65"
             syncfusion:DockingManager.DesiredWidthInDockedMode="350"
             syncfusion:DockingManager.Header="Application Log"
             syncfusion:DockingManager.SideInDockedMode="Bottom"
             syncfusion:DockingManager.TargetNameInDockedMode="SFProjectExplorer"
             >
                <views1:LogView />

            </ContentControl>



            <ContentControl
             x:Name="SFAudioTool"
             syncfusion:DockingManager.DesiredWidthInDockedMode="950"
             syncfusion:DockingManager.Header="Audio Tool"
             syncfusion:DockingManager.SideInDockedMode="Right"
             syncfusion:DockingManager.State="AutoHidden"
             >
                <audiotoolz:AudioToolView />

            </ContentControl>

            <ContentControl
             x:Name="SFCodeEditor"
             syncfusion:DockingManager.DesiredWidthInDockedMode="950"
             syncfusion:DockingManager.Header="Code Editor"
             syncfusion:DockingManager.SideInDockedMode="Right"
             syncfusion:DockingManager.State="Hidden"
             >
                <cr2weditor1:CodeEditorView />

            </ContentControl>
        </syncfusion:DockingManager>-->



    </Grid>
</catel:UserControl>
