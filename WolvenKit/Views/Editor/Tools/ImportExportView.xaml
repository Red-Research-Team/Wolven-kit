<catel:UserControl
 x:Class="WolvenKit.Views.Editor.ImportExportView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
 xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
 xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
 >
    <catel:UserControl.Resources>
        <VisualBrush
         x:Key="HatchBrush"
         po:Freeze="True"
         TileMode="Tile"
         Viewbox="0,0,5,5"
         ViewboxUnits="Absolute"
         Viewport="0,0,15,15"
         ViewportUnits="Absolute"
         >
            <VisualBrush.Visual>
                <Path
                 Data="M 0 5 L 5 0 M -2 2 L 2 -2 M 3 7 L 7 3"
                 RenderOptions.EdgeMode="Aliased"
                 Stroke="{DynamicResource RegionBrush}"
                 StrokeEndLineCap="Square"
                 />
            </VisualBrush.Visual>
        </VisualBrush>
    </catel:UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />

            <RowDefinition Height="3*" />

            <RowDefinition Height="70" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />

            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>


        <!--  Main Grid  -->
        <Grid
         Grid.RowSpan="4"
         Grid.ColumnSpan="4"
         Background="Gray"
         >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />

            </Grid.RowDefinitions>

            <syncfusion:SfDataGrid Grid.Row="1" />


            <Grid Grid.Row="2" Background="{DynamicResource ContentBackgroundAlt2}">
                <StackPanel
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Orientation="Horizontal"
                 >
                    <Button
                     Height="35"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     Content="Process Selected"
                     Style="{DynamicResource MessageBoxButtonStyle}"
                     />
                    <Button
                     Height="35"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     Content="Process All"
                     Style="{DynamicResource MessageBoxButtonStyle}"
                     />
                    <Button
                     Height="35"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     Content="Process Imports"
                     Style="{DynamicResource MessageBoxButtonStyle}"
                     />
                    <Button
                     Height="35"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     Content="Process Exports"
                     Style="{DynamicResource MessageBoxButtonStyle}"
                     />

                </StackPanel>


            </Grid>
        </Grid>





























        <!--  Special Import / Export Options  -->
        <Grid
         Grid.RowSpan="4"
         Grid.ColumnSpan="4"
         Background="{DynamicResource ContentBackgroundAlt2}"
         Visibility="Collapsed"
         >
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>

            <Grid>
                <hc:Divider Margin="90,0,50,0" VerticalAlignment="Center" />

                <TextBlock
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 FontSize="15"
                 Text="EXTENSION"
                 />


                <Button
                 Width="60"
                 Height="35"
                 Margin="10"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Background="{DynamicResource ContentBackgroundAlt}"
                 Content="ADD"
                 FontSize="12"
                 Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                 />
            </Grid>

            <Grid
             x:Name="ContentLinkForSpecialExportOrImportOptions"
             Grid.Row="1"
             Margin="2"
             Background="{DynamicResource ContentBackgroundAlt}"
             />


        </Grid>








        <!--  file succesfully/error adding/added window.  -->
        <Grid
         Grid.RowSpan="4"
         Grid.ColumnSpan="4"
         Background="{DynamicResource ContentBackgroundAlt2}"
         Visibility="Collapsed"
         >
            <iconPacks:PackIconCodicons
             Width="50"
             Height="35"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Kind="Error"
             Visibility="Visible"
             />
            <iconPacks:PackIconCodicons
             Width="50"
             Height="35"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Kind="Check"
             Visibility="Visible"
             />
            <TextBlock
             x:Name="FileAddSuccesOrErrorTextBlock"
             Margin="0,65,0,0"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Text="File(s) succesfully added!"
             />
        </Grid>




        <!--  Exporting/Importing Overlay  -->
        <Grid
         Grid.RowSpan="4"
         Grid.ColumnSpan="4"
         Background="Gray"
         Visibility="Collapsed"
         >
            <syncfusion:SfBusyIndicator AnimationType="Gear" />
            <TextBlock
             x:Name="ImportExportOverlayText"
             Margin="0,65,0,0"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Text="Files are being imported..."
             />
        </Grid>








    </Grid>

</catel:UserControl>
