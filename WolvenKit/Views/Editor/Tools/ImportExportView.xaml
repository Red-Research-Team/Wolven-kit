<catel:UserControl
 x:Class="WolvenKit.Views.Editor.ImportExportView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
 xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
 xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
 >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>


        <!--  Main Grid  -->
        <Grid
         Grid.RowSpan="4"
         Grid.ColumnSpan="4"
         Background="Gray"
         >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />

            </Grid.RowDefinitions>



            <!--  Data Grid  -->
            <syncfusion:SfDataGrid Grid.Row="1" />



            <!--  Bottom Button Panel Main  -->

            <Grid Grid.Row="2" Background="{DynamicResource ContentBackgroundAlt2}">
                <StackPanel
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Orientation="Horizontal"
                 >
                    <Button
                     Height="35"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     Content="Process Selected"
                     Style="{DynamicResource MessageBoxButtonStyle}"
                     />
                    <Button
                     Height="35"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     Content="Process All"
                     Style="{DynamicResource MessageBoxButtonStyle}"
                     />
                    <Button
                     Height="35"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     Content="Process Imports"
                     Style="{DynamicResource MessageBoxButtonStyle}"
                     />
                    <Button
                     Height="35"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     Content="Process Exports"
                     Style="{DynamicResource MessageBoxButtonStyle}"
                     />

                </StackPanel>


            </Grid>
        </Grid>


        <!--  Special Import / Export Options  -->
        <Grid
         Grid.RowSpan="4"
         Grid.ColumnSpan="4"
         Background="{DynamicResource ContentBackgroundAlt2}"
         Visibility="Collapsed"
         >
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>

            <Grid>
                <hc:Divider Margin="90,0,50,0" VerticalAlignment="Center" />

                <TextBlock
                 Margin="10"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 FontSize="15"
                 Text="EXTENSION"
                 />


                <Button
                 Width="60"
                 Height="35"
                 Margin="10"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Background="{DynamicResource ContentBackgroundAlt}"
                 Content="ADD"
                 FontSize="12"
                 Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                 />
            </Grid>

            <Grid
             x:Name="ContentLinkForSpecialExportOrImportOptions"
             Grid.Row="1"
             Margin="2"
             Background="{DynamicResource ContentBackgroundAlt}"
             />

        </Grid>


        <!--  Exporting/Importing Overlay  -->
        <Grid
         Grid.RowSpan="4"
         Grid.ColumnSpan="4"
         Background="Gray"
         Visibility="Collapsed"
         >
            <syncfusion:SfBusyIndicator AnimationType="Gear" />
            <TextBlock
             x:Name="ImportExportOverlayText"
             Margin="0,65,0,0"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Text="Files are being processed..."
             />
        </Grid>





