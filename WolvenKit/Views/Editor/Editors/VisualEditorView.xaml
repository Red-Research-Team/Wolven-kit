                                                 Margin="0"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Diameter="60"
                                                 KeepVertical="False"
                                                 >
                                                    <Button
                                                     Margin="0"
                                                     Background="{x:Null}"
                                                     BorderBrush="{x:Null}"
                                                     Style="{DynamicResource CirclePanelButton}"
                                                     >
                                                        <iconPacks:PackIconBootstrapIcons Kind="NodePlus" />
                                                    </Button>
                                                    <Button
                                                     Margin="0"
                                                     Background="{x:Null}"
                                                     BorderBrush="{x:Null}"
                                                     Style="{DynamicResource CirclePanelButton}"
                                                     >
