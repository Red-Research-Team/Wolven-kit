                <hc:TabItem Header="Scene Editor">
                    <TextBlock
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Text="Coming Soon"
                     />
                </hc:TabItem>
            </hc:TabControl>

            <hc:UniformSpacingPanel
             Margin="15"
             VerticalAlignment="Bottom"
             Spacing="10"
             >

                <hc:Tag
                 Margin="0"
                 Content="Nodes"
                 ShowCloseButton="False"
                 >
                    <hc:Tag.Header>
                        <iconPacks:PackIconBootstrapIcons Margin="0" Kind="NodePlus" />
                    </hc:Tag.Header>
                </hc:Tag>

                <hc:Divider
                 MaxHeight="16"
                 LineStroke="{DynamicResource MahApps.Brushes.Accent3}"
                 LineStrokeThickness="2"
                 Orientation="Vertical"
                 />
                <hc:Tag
                 Margin="0"
                 Content="Add Node"
                 ShowCloseButton="False"
                 >
                    <hc:Tag.Header>
                        <iconPacks:PackIconBootstrapIcons Margin="0" Kind="NodePlus" />
                    </hc:Tag.Header>
                </hc:Tag>
            </hc:UniformSpacingPanel>
            <hc:AnimationPath
             Width="76"
             Height="76"
             Margin="15"
             HorizontalAlignment="Right"
             VerticalAlignment="Bottom"
             Data="{StaticResource Try}"
             PathLength="400"
             Stretch="Uniform"
             Stroke="{DynamicResource MahApps.Brushes.Accent2}"
             StrokeThickness="1"
             Duration="0:0:16"
             />
        </Grid>
    </Border>
</catel:UserControl>
