<catel:UserControl 
    
    x:Class="WolvenKit.Views.Wizards.WizardPages.ProjectWizard.ProjectConfigurationView"                   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                   
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                   
    xmlns:catel="http://schemas.catelproject.com"                    
    xmlns:hc="https://handyorg.github.io/handycontrol"                   
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/TextBoxExtendedCustom.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid  VerticalAlignment="Center" Grid.Row="3" MinWidth="370" >
        
        <Grid Margin="5,5,5,5" Background="{DynamicResource MahApps.Brushes.ThemeBackground}" HorizontalAlignment="Stretch">
            
            <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                
                <StackPanel Margin="0,10,0,0" Orientation="Vertical" VerticalAlignment="Top">
                    
                    
                    <Grid Margin="22,0,0,0" >

                        <StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="Project Image"></Run>

                                    <LineBreak/>
                                    <Run Text="(Optional)"></Run>
                                </TextBlock>
                                <hc:ImageSelector   x:Name="imgSelector" Margin="10,0,0,0" Width="100" Height="100"  HorizontalAlignment="Left"/>
                            </StackPanel>

                            <hc:TextBox    x:Name="projectNameTxtbx" hc:InfoElement.Necessary="True" hc:InfoElement.TitleWidth="140" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="Project Name" Style="{StaticResource TextBoxExtendCustom}" Margin="0,32,0,0" Text="{Binding ProjectName}" HorizontalAlignment="Stretch" TextChanged="TextBox_TextChanged"/>
                            <hc:TextBox    x:Name="projectPathTxtbx" hc:InfoElement.Necessary="True" hc:InfoElement.TitleWidth="140" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="Project Path" Style="{StaticResource TextBoxExtendCustom}" VerifyFunc="VerifyFolder" Margin="0,32,50,0" Text="{Binding ProjectPath}" HorizontalAlignment="Stretch" VerticalAlignment="Top" TextChanged="TextBox_TextChanged"/>

                        </StackPanel>

                        <Button Width="50" Height="34"  Margin="5,5,0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="ProjectPathBtn_Click">
                            <iconPacks:PackIconCodicons  Grid.Row="0"   Kind="FolderOpened" Spin="False" SpinAutoReverse="False" Height="15" Width="15" Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" Margin="0,0,0,0" HorizontalAlignment="Center"  VerticalAlignment="Center" />

                        </Button>


                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>

</catel:UserControl>
