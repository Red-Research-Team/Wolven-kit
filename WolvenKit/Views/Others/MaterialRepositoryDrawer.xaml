<UserControl
 x:Class="WolvenKit.Views.Others.MaterialRepositoryDrawer"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:Converters="clr-namespace:WolvenKit.Functionality"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:feather="clr-namespace:Feather.Controls;assembly=Feather.Controls"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:local="clr-namespace:WolvenKit.Views.Others"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 d:DesignHeight="450"
 d:DesignWidth="800"
 mc:Ignorable="d"
 >
    <UserControl.Resources>
        <Converters:XenConverter x:Key="MyColorToBrushConverterx" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="150" />
            <RowDefinition Height="300" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TextBlock
         Margin="15"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         Style="{DynamicResource TextBlockTitleBold}"
         Text="Material Repository"
         />

        <Border
         Grid.Row="1"
         BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
         BorderThickness="1"
         >
            <ListBox
             x:Name="Henry"
             ItemsSource="{Binding Folders, Mode=OneWay}"
             SelectionChanged="ListView_SelectionChanged"
             SelectionMode="Single"
             />
        </Border>

        <Border
         Grid.Row="2"
         BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
         BorderThickness="1"
         >

            <ListBox
             x:Name="x"
             ItemsSource="{Binding ImageSources, Mode=OneWay}"
             SelectionChanged="x_SelectionChanged"
             SelectionMode="Single"
             />
        </Border>

        <Border
         Grid.Row="3"
         BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
         BorderThickness="1"
         >
            <ScrollViewer>
                <hc:ImageViewer
                 x:Name="bold"
                 Width="auto"
                 VerticalAlignment="Bottom"
                 Background="{DynamicResource SecondaryRegionBrush}"
                 />
            </ScrollViewer>

        </Border>

    </Grid>
</UserControl>
