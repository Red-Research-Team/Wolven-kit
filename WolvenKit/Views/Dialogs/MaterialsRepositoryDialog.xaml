<hc:Window
    x:Class="WolvenKit.Views.Dialogs.MaterialsRepositoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:WolvenKit.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Materials Repository Generator"
    Width="600"
    Height="450"
    ResizeMode="NoResize"
    SizeToContent="Height"
    mc:Ignorable="d">

    <hc:Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources AccentColor="{StaticResource MahApps.Brushes.AccentBase}" RequestedTheme="Dark" />
                <hc:Theme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </hc:Window.Resources>

    <Grid Background="{DynamicResource RegionBrush}"
          DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type hc:Window}}}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="15"
                    VerticalAlignment="Center"
                    Text="Do you want to generate a Materials Repository?" />

                <Border
                    Margin="10"
                    VerticalAlignment="Center"
                    Style="{StaticResource BorderTipWarning}">
                    <TextBlock Text="Warning this takes up quite a bit of space locally." />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" IsEnabled="False">
                <TextBox
                    Width="150"
                    HorizontalAlignment="Stretch"
                    IsEnabled="False"
                    Text="Game archives path"
                    />
                <TextBox
                    x:Name="ArchivesTextBox"
                    Width="400"
                    HorizontalAlignment="Stretch"
                    IsEnabled="False"
                    Text="{Binding ArchivesFolderPath, Mode=OneWay}" />
                <Button
                    x:Name="ArchivesButton"
                    Click="ArchivesButton_Click"
                    Content="Find" />


            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox
                    Width="150"
                    HorizontalAlignment="Stretch"
                    IsEnabled="False"
                    Text="Materials Repository Path" />
                <TextBox
                    x:Name="MaterialsTextBox"
                    Width="400"
                    HorizontalAlignment="Stretch"
                    hc:InfoElement.Necessary="True"
                    IsEnabled="False"
                    Text="{Binding MaterialsDepotPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    x:Name="MaterialsButton"
                    Click="MaterialsButton_Click"
                    Content="Find" />


            </StackPanel>
            <Button
                Margin="15"
                HorizontalAlignment="Stretch"
                Click="GenerateButton_Click"
                Content="Generate" />


        </StackPanel>

    </Grid>
</hc:Window>
