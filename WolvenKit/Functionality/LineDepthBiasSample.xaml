<Page
 x:Class="Ab3d.DXEngine.LineDepthBiasSample"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:cameras="clr-namespace:Ab3d.Cameras;assembly=Ab3d.PowerToys"
 xmlns:controls="clr-namespace:Ab3d.Controls;assembly=Ab3d.PowerToys"
 xmlns:controls1="clr-namespace:Ab3d.DirectX.Controls;assembly=Ab3d.DXEngine.Wpf"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:localControls="clr-namespace:Ab3d.DXEngine"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:visuals="clr-namespace:Ab3d.Visuals;assembly=Ab3d.PowerToys"
 Title="LineDepthBiasSample"
 d:DesignHeight="500"
 d:DesignWidth="700"
 mc:Ignorable="d"
 >

    <Grid Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
         Name="SettingsBorder"
         Grid.Row="0"
         Grid.RowSpan="3"
         Grid.Column="0"
         Margin="5"
         HorizontalAlignment="Left"
         VerticalAlignment="Bottom"
         Panel.ZIndex="2"
         Background="#44000000"
         BorderBrush="Black"
         BorderThickness="2"
         >

            <StackPanel Margin="10,5" Orientation="Vertical">

                <TextBlock
                 Margin="0,0,0,0"
                 FontWeight="Bold"
                 Text="Depth bias:"
                 />
                <ComboBox
                 Name="DepthBiasComboBox"
                 Width="100"
                 SelectionChanged="DepthBiasComboBox_OnSelectionChanged"
                 />

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                     Margin="0,10,0,0"
                     FontWeight="Bold"
                     Text="Sphere radius:"
                     />
                    <localControls:InfoControl
                     x:Name="RadiusInfoControl"
                     Margin="5,10,0,0"
                     ShowDuration="600000"
                     />
                </StackPanel>
                <ComboBox
                 Name="SphereRadiusComboBox"
                 Width="100"
                 SelectionChanged="SphereRadiusComboBox_OnSelectionChanged"
                 />

                <RadioButton
                 Name="ShowSphereRadioButton"
                 Margin="0,10,0,0"
                 Checked="ShowSphereRadioButton_OnChecked"
                 Content="Show Sphere"
                 GroupName="ObjectType"
                 IsChecked="True"
                 />
                <RadioButton
                 Name="ShowTeapotRadioButton"
                 Margin="0,2,0,0"
                 Checked="ShowTeapotRadioButton_OnChecked"
                 Content="Show Teapot"
                 GroupName="ObjectType"
                 />
            </StackPanel>
        </Border>

        <StackPanel
         Grid.Row="0"
         Grid.Column="0"
         Margin="10"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Orientation="Vertical"
         >
            <TextBlock
             Name="TitleTextBlock"
             Panel.ZIndex="3"
             FontSize="17"
             FontWeight="Bold"
             Foreground="#444"
             Text="Line depth bias can prevent depth z-fighting of lines and solid object"
             TextWrapping="Wrap"
             />
            <TextBlock
             Margin="0,5,0,0"
             FontSize="14"
             Text="DepthBias moves line closer to the camera for the specified amount"
             TextWrapping="Wrap"
             />
        </StackPanel>
    </Grid>
</Page>

