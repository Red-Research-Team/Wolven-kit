<catel:UserControl
 x:Class="WolvenKit.MVVM.Views.Components.Editors.CsvEditorView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 >

    <catel:UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources />
                <hc:Theme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </catel:UserControl.Resources>

    <Grid>
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal">
                <Button
                 Width="150"
                 Margin="0,5,5,5"
                 Content="Save"
                 />
                <Button
                 Width="150"
                 Margin="5"
                 Content="Export Csv"
                 />
                <Button
                 Width="150"
                 Margin="5"
                 Content="Import Csv"
                 />
            </StackPanel>
            <Grid Height="360">
                <hc:TextBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </Grid>
        </StackPanel>
    </Grid>
</catel:UserControl>
