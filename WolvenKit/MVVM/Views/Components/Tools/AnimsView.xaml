<catel:UserControl
 x:Class="WolvenKit.MVVM.Views.Components.Tools.AnimsView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 IsVisibleChanged="UserControl_IsVisibleChanged"
 >
    <catel:UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources />
                <hc:Theme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </catel:UserControl.Resources>

    <Grid>

        <StackPanel VerticalAlignment="Center">
            <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                <hc:ComboBox
                 Width="450"
                 VerticalAlignment="Top"
                 hc:InfoElement.Title="w2rig"
                 hc:InfoElement.TitlePlacement="Left"
                 hc:InfoElement.TitleWidth="140"
                 IsEditable="True"
                 Text="None"
                 />
                <Button
                 Width="50"
                 Margin="5,0,0,0"
                 Content="Browse"
                 />
            </StackPanel>
            <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                <hc:ComboBox
                 Width="450"
                 VerticalAlignment="Top"
                 hc:InfoElement.Title="w2anims"
                 hc:InfoElement.TitlePlacement="Left"
                 hc:InfoElement.TitleWidth="140"
                 IsEditable="True"
                 Text="None"
                 />
                <Button
                 Width="50"
                 Margin="5,0,0,0"
                 Content="Browse"
                 />
            </StackPanel>
            <hc:ComboBox
             Width="auto"
             Margin="0,15,0,15"
             hc:InfoElement.Title="Select Animation"
             hc:InfoElement.TitlePlacement="Left"
             hc:InfoElement.TitleWidth="140"
             IsEditable="True"
             Text=""
             />
            <Grid Margin="0,0,0,0" VerticalAlignment="Bottom">
                <Button
                 Width="150"
                 HorizontalAlignment="Right"
                 Content="Export"
                 />
                <Button
                 Width="150"
                 HorizontalAlignment="Left"
                 Content="Cancel"
                 />
            </Grid>
        </StackPanel>
    </Grid>
</catel:UserControl>
