<catel:UserControl
 x:Class="WolvenKit.MVVM.Views.Components.Wizards.WizardPages.PublishWizard.RequiredSettingsView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 >

    <Grid Grid.Row="3" VerticalAlignment="Center">
        <Grid
         Margin="5,5,5,5"
         HorizontalAlignment="Stretch"
         Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
         >
            <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                <StackPanel
                 Margin="0,10,0,0"
                 VerticalAlignment="Top"
                 Orientation="Vertical"
                 >
                    <TextBlock
                     Grid.Row="0"
                     Margin="10,10,0,10"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                     Text="Required Settings"
                     />
                    <Grid Margin="22,0,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="Mod logo" />
                                <hc:ImageSelector
                                 Width="100"
                                 Height="100"
                                 Margin="85,0,0,0"
                                 HorizontalAlignment="Left"
                                 />
                            </StackPanel>
                            <TextBox
                             Margin="0,32,0,0"
                             HorizontalAlignment="Stretch"
                             hc:InfoElement.Title="Mod Name"
                             hc:InfoElement.TitlePlacement="Left"
                             hc:InfoElement.TitleWidth="140"
                             Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                             SelectionBrush="{DynamicResource MahApps.Brushes.Accent}"
                             Style="{StaticResource TextBoxExtend}"
                             Text="test"
                             />
                            <TextBox
                             Margin="0,32,0,0"
                             HorizontalAlignment="Stretch"
                             hc:InfoElement.Title="Mod Version"
                             hc:InfoElement.TitlePlacement="Left"
                             hc:InfoElement.TitleWidth="140"
                             Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                             SelectionBrush="{DynamicResource MahApps.Brushes.Accent}"
                             Style="{StaticResource TextBoxExtend}"
                             Text="test"
                             />
                            <TextBox
                             Margin="0,32,0,0"
                             HorizontalAlignment="Stretch"
                             hc:InfoElement.Title="Mod Author"
                             hc:InfoElement.TitlePlacement="Left"
                             hc:InfoElement.TitleWidth="140"
                             Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                             SelectionBrush="{DynamicResource MahApps.Brushes.Accent}"
                             Style="{StaticResource TextBoxExtend}"
                             Text="test"
                             />

                            <Grid>
                                <RichTextBox
                                 Height="100"
                                 Margin="140,32,0,0"
                                 HorizontalAlignment="Stretch"
                                 />

                                <TextBlock
                                 Margin="2,32,0,0"
                                 VerticalAlignment="Center"
                                 Text="Description"
                                 />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</catel:UserControl>
