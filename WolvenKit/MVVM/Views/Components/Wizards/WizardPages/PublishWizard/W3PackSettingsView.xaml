<catel:UserControl
 x:Class="WolvenKit.MVVM.Views.Components.Wizards.WizardPages.PublishWizard.W3PackSettingsView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
 >

    <catel:UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources />
                <hc:Theme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </catel:UserControl.Resources>

    <Grid
     MinWidth=" 350"
     MinHeight="350"
     MaxWidth="450"
     Margin="5"
     HorizontalAlignment="Stretch"
     hc:ThemeManager.RequestedAccentColor="{DynamicResource MahApps.Brushes.Accent3}"
     >

        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>

        <Path
         Width="30"
         Height="23"
         Margin="-1"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Data="{StaticResource PackerIcon}"
         Fill="{DynamicResource MahApps.Brushes.ThemeForeground}"
         Stretch="Fill"
         Stroke="{DynamicResource MahApps.Brushes.ThemeForeground}"
         StrokeThickness="1"
         Style="{DynamicResource Path}"
         />

        <StackPanel
         Margin="35,0,0,0"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Orientation="Horizontal"
         >

            <TextBlock
             Margin="0"
             FontSize="15"
             FontWeight="Bold"
             Text="TW3 Pack Settings"
             />
        </StackPanel>

        <Grid x:Name="PageGrid" Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid
             Grid.Row="1"
             Grid.ColumnSpan="10"
             Margin="0,35,0,0"
             >
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                    <Button
                     Width="170"
                     Background="{DynamicResource MahApps.Brushes.Gray10}"
                     Content="Cancel"
                     />

                    <hc:Divider Height="25" Orientation="Vertical" />

                    <Button
                     Width="170"
                     Background="{DynamicResource MahApps.Brushes.Accent4}"
                     Content="Confirm"
                     />
                </StackPanel>
            </Grid>

            <StackPanel Grid.Column="1" Margin="3,15,3,0">
                <!--
                    Order :
                    1: Pack Bundles
                    2: Metadata
                    3: Text cache
                    4: collis cache
                    5: sound cache
                    6: shader cache
                    7: depric cache
                    8: Pack w3speech
                    9: Deploy scripts
                    10: Deploy W3Strings
                -->
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="Mod"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,9,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="All"
                 />
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="0,15,0,0">
                <!--
                    Order :
                    1: Pack Bundles
                    2: Metadata
                    3: Text cache
                    4: collis cache
                    5: sound cache
                    6: shader cache
                    7: depric cache
                    8: Pack w3speech
                    9: Deploy scripts
                    10: Deploy W3Strings
                -->
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,0,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="DLC"
                 />
                <hc:Divider Margin="0,0,0,0" />
                <CheckBox
                 Margin="0,8,9,0"
                 Background="{DynamicResource MahApps.Brushes.Accent3}"
                 BorderBrush="Transparent"
                 Content="All"
                 />
            </StackPanel>

            <StackPanel Grid.Column="0" Margin="0,15,0,0">
                <TextBlock Margin="0,10,0,0" Text="Pack bundles" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Generate metadata.store" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Generate texture cache" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Generate collision cache" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Generate sound cache" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Generate shader cache" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Generate deprecation cache" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Pack w3speech" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Deploy scripts" />
                <hc:Divider Margin="0,2,0,0" />
                <TextBlock Margin="0,10,0,0" Text="Deploy w3strings" />
                <hc:Divider Margin="0,2,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</catel:UserControl>
