<catel:UserControl
 x:Class="WolvenKit.MVVM.Views.Components.Wizards.WizardPages.ProjectWizard.ProjectConfigurationView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
 Loaded="UserControl_Loaded"
 >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/TextBoxExtendedCustom.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid
     Grid.Row="3"
     MinWidth="370"
     VerticalAlignment="Center"
     >

        <Grid
         Margin="5,5,5,5"
         HorizontalAlignment="Stretch"
         Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
         >

            <Grid Grid.Row="1" HorizontalAlignment="Stretch">

                <StackPanel
                 Margin="0,10,0,0"
                 VerticalAlignment="Top"
                 Orientation="Vertical"
                 >

                    <Grid Margin="22,0,0,0">

                        <StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="Project icon" />

                                    <LineBreak />
                                    <Run Text="(Optional)" />
                                </TextBlock>
                                <hc:ImageSelector
                                 x:Name="imgSelector"
                                 Width="100"
                                 Height="100"
                                 Margin="10,0,0,0"
                                 HorizontalAlignment="Left"
                                 />
                            </StackPanel>

                            <hc:TextBox
                             x:Name="projectNameTxtbx"
                             Margin="0,32,0,0"
                             HorizontalAlignment="Stretch"
                             hc:InfoElement.Necessary="True"
                             hc:InfoElement.Title="Project Name"
                             hc:InfoElement.TitlePlacement="Left"
                             hc:InfoElement.TitleWidth="140"
                             Style="{StaticResource TextBoxExtendCustom}"
                             Text="{Binding ProjectName}"
                             TextChanged="TextBox_TextChanged"
                             />
                            <hc:TextBox
                             x:Name="projectPathTxtbx"
                             Margin="0,32,50,0"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Top"
                             hc:InfoElement.Necessary="True"
                             hc:InfoElement.Title="Project Path"
                             hc:InfoElement.TitlePlacement="Left"
                             hc:InfoElement.TitleWidth="140"
                             Style="{StaticResource TextBoxExtendCustom}"
                             Text="{Binding ProjectPath}"
                             TextChanged="TextBox_TextChanged"
                             VerifyFunc="VerifyFolder"
                             />
                        </StackPanel>

                        <Button
                         Width="50"
                         Height="34"
                         Margin="5,5,0,0"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Bottom"
                         Click="ProjectPathBtn_Click"
                         >
                            <iconPacks:PackIconCodicons
                             Grid.Row="0"
                             Width="15"
                             Height="15"
                             Margin="0,0,0,0"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                             Kind="FolderOpened"
                             Spin="False"
                             SpinAutoReverse="False"
                             />
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</catel:UserControl>
